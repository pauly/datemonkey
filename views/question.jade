div#content
  form
    - if ( ! content.hidden.name )
      label What is your name?
        input(name='name', value='Anon')
    p #{content.result} 
      b #{content.score}

    p #{content.category.title} #{content.question.question}?
    each val, key in content.hidden
      - if ( val !== '' )
        input(type='hidden', name=key, value=val)
    each option in content.question.options
      button(name='answer', type='submit', value=option[0])
        span #{option[0]} 

    p
      label
        input(type='radio', name='difficulty', value=1, checked=(content.difficulty==1))
        span make it tricksy next time 
      label
        input(type='radio', name='difficulty', value=-1, checked=(content.difficulty==-1))
        span make it easy next time 

    if ( content.clues )
    p Some clues:
      ul
        each clue in content.clues
          li #{clue[0]}

    p #{content.category.explanation}
